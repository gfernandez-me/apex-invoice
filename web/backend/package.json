{
  "name": "@apex/backend",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "debug": "node --inspect-brk ./index.js",
    "dev": "nodemon --watch 'dist/**/*.js' -e js dist/index.js",
    "build": "swc src --out-dir dist --strip-leading-paths --copy-files",
    "build:watch": "swc src -w --out-dir dist --strip-leading-paths --copy-files",
    "serve": "cross-env NODE_ENV=production node dist/index.js",
    "db:generate": "prisma generate",
    "css:build": "tailwindcss -i ./src/index.css -o ./src/assets/build.css",
    "css:build:watch": "tailwindcss -i ./src/index.css -o ./src/assets/build.css --watch",
    "typecheck": "tsc"
  },
  "type": "module",
  "dependencies": {
    "@apex/config": "workspace:*",
    "@apex/email": "workspace:*",
    "@apex/shared": "workspace:*",
    "@apex/shared-ui": "workspace:*",
    "@aws-sdk/client-ses": "^3.750.0",
    "@aws-sdk/credential-provider-node": "^3.750.0",
    "@godaddy/terminus": "^4.12.1",
    "@hokify/agenda": "^6.3.0",
    "@prisma/client": "^5.22.0",
    "@shopify/shopify-app-express": "^5.0.12",
    "@trpc/server": "11.0.0-rc.449",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "decimal.js": "^10.5.0",
    "express-async-handler": "^1.2.0",
    "lru-cache": "^11.0.2",
    "node-fetch": "^3.3.2",
    "pino": "^8.21.0",
    "pino-http": "^8.6.1",
    "puppeteer": "^21.11.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "serve-static": "^1.16.2",
    "superjson": "^2.2.2",
    "zod": "^3.24.2",
    "zod-express-middleware": "^1.4.0"
  },
  "devDependencies": {
    "@apex/tsconfig": "workspace:*",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.17",
    "@swc/plugin-transform-imports": "^6.4.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.4",
    "@types/serve-static": "^1.15.7",
    "autoprefixer": "^10.4.20",
    "pino-pretty": "^10.3.1",
    "prisma": "^5.22.0"
  }
}
